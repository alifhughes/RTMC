extends layout

block content
  div.full-screen.light-grey-background-colour
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title User Details
                    div.signup-wall
                        form(class='form-signin', action='/portal/edit', method='POST')
                            input(type='text', name='username', class='form-control', placeholder='#{username}',required, autofocus)
                            input(type='email', name='email', class='form-control nomargin', placeholder='#{email}', required)
                            input(type='text', name='firstName', class='form-control nomargin', placeholder='#{firstName}', required)
                            input(type='text', name='lastName', class='form-control nomargin', placeholder='#{lastName}', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Update
                            span.clearfix
                    #message
                        if message
                            h1.text-center.error-message #{message}
