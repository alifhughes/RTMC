extends layout

block content
  div.full-screen.light-grey-background-colour
      div.container
        div.row
          div.col-sm-6.col-md-4.col-md-offset-4
              div.account-wall
                h1.text-center.login-title Name the arrangement
                form(class='form-signin', action='/workstation/setup', method='POST')
                  input(type='text', name='project-name' class='form-control', placeholder='Arrangement Name',required, autofocus)
                  button(class='btn btn-lg btn-primary btn-block', type='submit') Start creating!
                  span.clearfix
              #message
              if message
                h1.text-center.error-message #{message}

